# Use Bitnami Kafka as the base image
FROM bitnami/kafka:latest

# Set environment variables for KRaft mode
ENV KAFKA_ENABLE_KRAFT=yes
ENV KAFKA_CFG_PROCESS_ROLES=broker,controller
ENV KAFKA_CFG_CONTROLLER_LISTENER_NAMES=CONTROLLER
ENV KAFKA_CFG_LISTENERS=PLAINTEXT://:9092,CONTROLLER://:9093,EXTERNAL://:9094
ENV KAFKA_CFG_LISTENER_SECURITY_PROTOCOL_MAP=CONTROLLER:PLAINTEXT,PLAINTEXT:PLAINTEXT,EXTERNAL:PLAINTEXT
ENV KAFKA_CFG_ADVERTISED_LISTENERS=PLAINTEXT://127.0.0.1:9092,EXTERNAL://kafka_b:9094
ENV KAFKA_BROKER_ID=1
ENV KAFKA_CFG_CONTROLLER_QUORUM_VOTERS=1@127.0.0.1:9093
ENV ALLOW_PLAINTEXT_LISTENER=yes
ENV KAFKA_CFG_NODE_ID=1
ENV KAFKA_AUTO_CREATE_TOPICS_ENABLE=true
ENV KAFKA_CFG_NUM_PARTITIONS=2

# Expose necessary ports
EXPOSE 9092 9093 9094

# Optionally add any custom scripts or configuration here
# COPY custom-configs/ /opt/bitnami/kafka/config/

# Start Kafka using the default entrypoint
CMD ["/opt/bitnami/scripts/kafka/run.sh"]